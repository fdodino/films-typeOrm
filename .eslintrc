{
  "ignorePatterns": [
    "**/*.js",
    "dist/**"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "root": true,
  "rules": {
    "no-empty-function": "off",
    "no-explicit-any": "off",
    "no-namespace": "off",
    "no-non-null-assertion": "off",
    "no-this-alias": "off",
    "no-unsafe-assignment": "off",
    "no-unsafe-call": "off",
    "no-unused-vars": [
      "warn",
      {
        "args": "after-used",
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true,
        "vars": "all"
      }
    ],
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "error", 
      "never"
    ],
    "array-bracket-spacing": [
      "warn",
      "never"
    ],
    
    "arrow-spacing": "warn",
    "comma-dangle": [
      "warn",
      {
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "functions": "only-multiline",
        "imports": "always-multiline",
        "objects": "always-multiline"
      }
    ],
    "comma-spacing": [
      "warn",
      {
        "after": true,
        "before": false
      }
    ],
    "eol-last": [
      "warn",
      "never"
    ],
    "for-direction": "off",
    "function-call-argument-newline": [
      "warn",
      "consistent"
    ],
    "array-element-newline": [
      "warn",
      "consistent"
    ],
    "indent": [
      "warn",
      2
    ],
    "no-case-declarations": "off",
    "no-console": [
      "off"
    ],
    "no-constant-condition": [
      "warn"
    ],
    "no-inner-declarations": "off",
    "no-multiple-empty-lines": [
      "warn",
      {
        "max": 2,
        "maxEOF": 0
      }
    ],
    "object-curly-newline": [
      "warn",
      {
        "ExportDeclaration": {
          "minProperties": 4,
          "multiline": true
        },
        "ImportDeclaration": "never",
        "ObjectExpression": {
          "multiline": true
        },
        "ObjectPattern": {
          "multiline": true
        }
      }
    ],
    "object-curly-spacing": [
      "warn",
      "always"
    ],
    "padding-line-between-statements": [
      "warn",
      {
        "blankLine": "never",
        "next": "import",
        "prev": "import"
      }
    ],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "asyncArrow": "always",
        "named": "never"
      }
    ],
  }
}